<!DOCTYPE html>
<head>
    
    <link rel="stylesheet" href="app.css">
</head>

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Index of car</title>
    <link rel="stylesheet" href="main.css">
  </head>
  <body>
    <h1>Index of car</h1>
    <nav>
      <a href="/cars/new">Create a New car</a>
    </nav>
    <ul>
    <% cars.forEach((car, index) => { %>
      <li>
        <a href="/cars/<%=index%>"> <%= car.name %></a>
        <form action="/cars/<%= index %>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE"/>
        </form>
        <a href="/cars/<%=cars[index]._id%>"> Show</a>
        <a href="/cars/<%=cars[index]._id %>/edit">Edit</a>
      </li>
    <% }) %>
    </ul>
  </body>
</html>