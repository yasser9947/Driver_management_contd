<!DOCTYPE html>
<head>
    
    <link rel="stylesheet" href="app.css">
</head>

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Index of Driver</title>
    <link rel="stylesheet" href="main.css">
  </head>
  <body>
    <h1>Index of Driver</h1>
    <nav>
      <a href="/drivers/new">Create a New Driver</a>
    </nav>
    <ul>
    <% drivers.forEach((driver, index) => { %>
      <li>
        <a href="/drivers/<%=index%>"> <%= driver.name %></a>
        <form action="/drivers/<%= index %>?_method=DELETE" method="POST">
          <input type="submit" value="DELETE"/>
        </form>
        <a href="/drivers/<%=drivers[index]._id%>"> Show</a>
        <a href="/drivers/<%=drivers[index]._id %>/edit">Edit</a>
      </li>
    <% }) %>
    </ul>
  </body>
</html>